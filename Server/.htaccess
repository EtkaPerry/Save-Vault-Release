RewriteEngine On

# Prevent direct access to sensitive files and directories
RewriteRule ^site/includes/ - [F,L]
RewriteRule ^\.git/ - [F,L]
RewriteRule ^.*\.(?:git|env|log|json|lock|md)$ - [F,L]

# Custom 404 error page

# Route all /api/* requests to auth_api.php
RewriteRule ^api/(.*)$ auth_api.php [L,QSA]

# Handle clean URLs for pages

# Allow direct access to assets and .well-known
RewriteRule ^\.well-known/ - [L]

# Handle assets with clean URLs

# Default page handler
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# Disable directory listing
Options -Indexes
